@using KlamthIrrigationDistrict.DataLayer.DataModels
@model DitchRider

@using (Html.BeginForm())
{
    //DitchRider ID
    @Html.HiddenFor(m => m.DitchRiderID)
    <div>
     @*DitchRiderFirstName*@
    @Html.LabelFor(m => m.DitchRiderFirstName)
    @Html.TextBoxFor(m => m.DitchRiderFirstName)
    @Html.ValidationMessageFor(m => m.DitchRiderFirstName)
    </div>
    <div>
    @*DitchRiderLastname*@
    @Html.LabelFor(m => m.DitchRiderLastName)
    @Html.TextBoxFor(m => m.DitchRiderLastName)
    @Html.ValidationMessageFor(m => m.DitchRiderLastName)
    </div>
    <div>
    @*DitchRiderPhoneNumber*@
    @Html.LabelFor(m => m.DitchRiderPhoneNumber)
    @Html.TextBoxFor(m => m.DitchRiderPhoneNumber)
    @Html.ValidationMessageFor(m => m.DitchRiderPhoneNumber)
    </div>
    <input type="submit" value="Submit"/>
}